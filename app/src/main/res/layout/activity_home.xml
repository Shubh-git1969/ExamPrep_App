<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/deep_purple_custom"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!--  profile image -->

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        />

    <!-- Username -->

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shubham Dubey"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        android:layout_marginStart="12dp"/>

    <!-- Notification bell -->

    <ImageView
        android:id="@+id/notificationBell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell"
        android:tint="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        android:layout_marginEnd="8dp"/>


    <!-- Semester Title -->

    <TextView
        android:id="@+id/semesterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Semester"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        />

    <HorizontalScrollView
        android:id="@+id/semesterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/semesterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:id="@+id/semesterButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/sem1"
            style="@style/SemesterChip"
            android:text="1st Sem"/>



    <Button
            android:id="@+id/sem2"
            style="@style/SemesterChip"
            android:text="2nd Sem"/>

    <Button
            android:id="@+id/sem3"
            style="@style/SemesterChip"
            android:text="3rd Sem"/>

    <Button
            android:id="@+id/sem4"
            style="@style/SemesterChip"
            android:text="4th Sem"/>

    <Button
        android:id="@+id/sem5"
        style="@style/SemesterChip"
        android:text="5th Sem"/>

    <Button
        android:id="@+id/sem6"
        style="@style/SemesterChip"
        android:text="6th Sem"/>

    <Button
        android:id="@+id/sem7"
        style="@style/SemesterChip"
        android:text="7th Sem"/>

    <Button
        android:id="@+id/sem8"
        style="@style/SemesterChip"
        android:text="8th Sem"/>

    </LinearLayout>

    </HorizontalScrollView>


    <!-- Recently Viewed Title -->

<TextView
    android:id="@+id/recentlyViewedTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Recently Viewed"
    android:textColor="#CCCCCC"
    android:textStyle="bold"
    android:textSize="16sp"
    android:layout_marginTop="18dp"
    app:layout_constraintTop_toBottomOf="@id/semesterScroll"
    app:layout_constraintStart_toStartOf="parent"/>

    <!-- Recently Viewed Subject -->

<TextView
    android:id="@+id/recentSubject"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Data Structure &amp; Algorithm - 3rd Sem"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:background="#1E1E1E"
    android:textSize="15sp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/recentlyViewedTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/subjectsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subjects for Selected Sem"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/recentSubject"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/subjectContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/subjectsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>


        
